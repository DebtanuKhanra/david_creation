<section class="login flex justify-center">
  <div class="w-full max-w-xs mt-24">
    <form action="/login" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <% if (messages.error) { %>
        <p class="text-red-500 italic mb-4">
          <%= messages.error %>
        </p>
        <% } %>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            <input name="email" value="<%= messages.email %>"
              class="shadow appearance-none border <%= !messages.email && messages.error  && 'border-red-500' %> rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="email" type="text" placeholder="Enter your email">
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            <input name="password"
              class="shadow appearance-none border <%= messages.error  && 'border-red-500' %> rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
              id="password" type="password" placeholder="******************">
          </div>
          <div class="flex items-center justify-between">
            <button
              class="text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline btn-primary">Log
              In</button>

            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/login">
              Don't have account?
            </a>
          </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2022 DAVID CREATION. All rights reserved.
    </p>
  </div>
</section>
